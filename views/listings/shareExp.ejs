<% layout("/layouts/boilerplates") %>
<section class="py-2 bg-custom-light">
  <div class="container py-5">
    <div class="row align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <h1 class="display-4 fw-bold mb-4">Share Your Hackathon Journey</h1>
        <p class="lead mb-4">
          Help others learn from your experience by sharing your hackathon
          story.
        </p>
      </div>
      <div class="col-lg-6">
        <img
          src="/assets/hackathon.jpg"
          alt="Share experience illustration"
          class="img-fluid"
        />
      </div>
    </div>
  </div>
</section>

<!-- Experience Form -->
<section class="py-2">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card card-custom">
          <div class="card-body p-5">
            <h2 class="fw-bold mb-4">Tell Us About Your Experience</h2>
            <form
              action="/experiance"
              method="POST"
              novalidate
              class="needs-validation"
            >
              <div class="mb-4">
                <label for="hackathonName" class="form-label"
                  >Hackathon Name</label
                >
                <input
                  type="text"
                  class="form-control form-control-custom"
                  id="hackathonName"
                  name="experiance[hackathonName]"
                  required
                />
                <div class="invalid-feedback">
                  Please enter the hackathon name.
                </div>
              </div>

              <div class="row g-3 mb-4">
                <div class="col-md-6">
                  <label for="hackathonDate" class="form-label"
                    >Date Attended</label
                  >
                  <input
                    type="date"
                    class="form-control form-control-custom"
                    id="hackathonDate"
                    name="experiance[hackathonDate]"
                    required
                  />
                  <div class="invalid-feedback">
                    Please select a valid date.
                  </div>
                </div>
                <div class="col-md-6">
                  <label for="hackathonLocation" class="form-label"
                    >Location</label
                  >
                  <input
                    type="text"
                    class="form-control form-control-custom"
                    id="hackathonLocation"
                    name="experiance[hackathonLocation]"
                    required
                  />
                  <div class="invalid-feedback">Please enter the location.</div>
                </div>
              </div>

              <div class="mb-4">
                <label for="projectTitle" class="form-label"
                  >Project Title</label
                >
                <input
                  type="text"
                  class="form-control form-control-custom"
                  id="projectTitle"
                  name="experiance[projectTitle]"
                  required
                />
                <div class="invalid-feedback">
                  Please enter your project title.
                </div>
              </div>

              <div class="mb-4">
                <label for="problemStatement" class="form-label"
                  >Problem Statement</label
                >
                <textarea
                  class="form-control form-control-custom"
                  id="problemStatement"
                  name="experiance[problemStatement]"
                  rows="4"
                  required
                ></textarea>
                <div class="invalid-feedback">
                  Please describe the problem statement.
                </div>
              </div>

              <div class="mb-4">
                <label for="solution" class="form-label">Your Solution</label>
                <textarea
                  class="form-control form-control-custom"
                  id="solution"
                  name="experiance[solution]"
                  rows="4"
                  required
                ></textarea>
                <div class="invalid-feedback">
                  Explain your approach and solution
                </div>
              </div>

              <div class="mb-4">
                <label for="technologies" class="form-label"
                  >Technologies Used</label
                >
                <input
                  type="text"
                  class="form-control form-control-custom"
                  id="technologies"
                  name="experiance[technologies]"
                  required
                />
                <small class="text-muted"
                  >Separate technologies with commas (e.g., React, Node.js,
                  MongoDB)</small
                >
                <div class="invalid-feedback">
                  Please enter at least one technology.
                </div>
              </div>

              <div class="mb-4">
                <label for="challenges" class="form-label"
                  >Challenges Faced</label
                >
                <textarea
                  class="form-control form-control-custom"
                  id="challenges"
                  name="experiance[challenges]"
                  rows="3"
                  required
                ></textarea>
                <div class="invalid-feedback">
                  Please describe the challenges faced.
                </div>
              </div>

              <div class="mb-4">
                <label for="learnings" class="form-label">Key Learnings</label>
                <textarea
                  class="form-control form-control-custom"
                  id="learnings"
                  name="experiance[learnings]"
                  rows="3"
                  required
                ></textarea>
                <div class="invalid-feedback">
                  Please share your key learnings.
                </div>
              </div>

              <div class="mb-4">
                <label for="teamMembers" class="form-label">Team Members</label>
                <input
                  type="text"
                  class="form-control form-control-custom"
                  id="teamMembers"
                  name="experiance[teamMembers]"
                />
                <small class="text-muted"
                  >Names separated by commas (optional)</small
                >
              </div>

              <div class="mb-4">
                <label for="projectLink" class="form-label">Project Link</label>
                <input
                  type="url"
                  class="form-control form-control-custom"
                  id="projectLink"
                  name="experiance[projectLink]"
                  placeholder="https://"
                />
              </div>

              <div class="mb-4">
                <label for="experienceImage" class="form-label"
                  >Upload Images</label
                >
                <input
                  type="file"
                  class="form-control form-control-custom"
                  id="experienceImage"
                  name="experiance[experienceImage]"
                  accept="image/*"
                  multiple
                />
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-custom-primary btn-lg">
                  Share Experience
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
