<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Hackathon Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo">
      <h4><i class="fas fa-code me-2"></i> HackShare</h4>
    </div>
    <nav class="nav flex-column p-3">
      <a class="nav-link active" href="/admin"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
      <a class="nav-link" href="#"><i class="fas fa-calendar-alt"></i> Hackathons</a>
      <a class="nav-link" href="#"><i class="fas fa-users"></i> Participants</a>
      <a class="nav-link" href="#"><i class="fas fa-cog"></i> Settings</a>
      <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </nav>
  </div>

  <!-- Main Content -->
  <div class="main-content">

    <!-- Navbar -->
    <nav class="navbar navbar-custom rounded">
      <div class="container-fluid">
        <h4 class="mb-0">Admin Dashboard</h4>
        <div class="d-flex align-items-center">
          <div class="dropdown">
            <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
              <i class="fas fa-user-circle me-2"></i>Admin
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
              <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <!-- Dynamic Stats -->
    <div class="row mt-4">
      <div class="col-md-3">
        <div class="dashboard-card stat-card">
          <i class="fas fa-calendar-alt fa-2x text-primary mb-3"></i>
          <h3 class="stat-number"><%= totalHackathons || 0 %></h3>
          <p class="text-muted">Total Hackathons</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="dashboard-card stat-card">
          <i class="fas fa-users fa-2x text-success mb-3"></i>
          <h3 class="stat-number"><%= totalParticipants %></h3>
          <p class="text-muted">Total Participants</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="dashboard-card stat-card">
          <i class="fas fa-trophy fa-2x text-warning mb-3"></i>
          <h3 class="stat-number"><%= activeEvents %></h3>
          <p class="text-muted">Active Events</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="dashboard-card stat-card">
          <i class="fas fa-chart-line fa-2x text-info mb-3"></i>
          <h3 class="stat-number"><%= engagementRate %>%</h3>
          <p class="text-muted">Engagement Rate</p>
        </div>
      </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs nav-tabs-custom mb-4 mt-4" id="adminTabs">
      <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#hackathons">Manage Hackathons</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#participants">View Participants</a>
      </li>
    </ul>

    <div class="tab-content">

      <!-- Hackathons Tab -->
      <div class="tab-pane fade show active" id="hackathons">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h5>Hackathon Events</h5>
          <button class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#addHackathonModal">
            <i class="fas fa-plus me-2"></i>Add New Hackathon
          </button>
        </div>

        <div class="table-responsive">
          <table class="table table-custom table-hover">
            <thead>
              <tr>
                <th>Event Name</th>
                <th>Date</th>
                <th>Location</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% hackathons.forEach(h => { %>
              <tr>
                <td>
                  <strong><%= h.name %></strong><br>
                  <small class="text-muted"><%= h.tags.join(', ') %></small>
                </td>
                <td><%= h.startDate.toDateString() %> - <%= h.endDate.toDateString() %></td>
                <td><%= h.location %></td>
                <td>
                  <span class="badge bg-<%= h.status === 'upcoming' ? 'info' : h.status === 'ongoing' ? 'warning' : 'success' %>">
                    <%= h.status.charAt(0).toUpperCase() + h.status.slice(1) %>
                  </span>
                </td>
                <td>
                  <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editHackathonModal<%= h._id %>">
                    Edit
                  </button>
                  <form action="/admin/<%= h._id %>/delete" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                </td>
              </tr>

              <!-- Edit Hackathon Modal -->
              <div class="modal fade" id="editHackathonModal<%= h._id %>" tabindex="-1">
                <div class="modal-dialog modal-lg">
                  <div class="modal-content">
                    <form action="/admin/<%= h._id %>/edit" method="POST">
                      <div class="modal-header">
                        <h5 class="modal-title">Edit Hackathon</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>
                      <div class="modal-body">
                        <div class="row g-3">
                          <div class="col-md-6">
                            <label class="form-label">Name</label>
                            <input type="text" name="name" value="<%= h.name %>" class="form-control" required>
                          </div>
                          <div class="col-md-6">
                            <label class="form-label">Organizer</label>
                            <input type="text" name="organizer" value="<%= h.organizer %>" class="form-control" required>
                          </div>
                          <div class="col-md-4">
                            <label class="form-label">Start Date</label>
                            <input type="date" name="startDate" value="<%= h.startDate.toISOString().substring(0,10) %>" class="form-control" required>
                          </div>
                          <div class="col-md-4">
                            <label class="form-label">End Date</label>
                            <input type="date" name="endDate" value="<%= h.endDate.toISOString().substring(0,10) %>" class="form-control" required>
                          </div>
                          <div class="col-md-4">
                            <label class="form-label">Registration Deadline</label>
                            <input type="date" name="registrationDeadline" value="<%= h.registrationDeadline.toISOString().substring(0,10) %>" class="form-control" required>
                          </div>
                          <div class="col-md-12">
                            <label class="form-label">Location</label>
                            <input type="text" name="location" value="<%= h.location %>" class="form-control">
                          </div>
                          <div class="col-12">
                            <label class="form-label">Image URL</label>
                            <input type="text" name="image" value="<%= h.image %>" class="form-control">
                          </div>
                          <div class="col-12">
                            <label class="form-label">Description</label>
                            <textarea name="description" class="form-control" rows="3"><%= h.description %></textarea>
                          </div>
                          <div class="col-md-6">
                            <label class="form-label">Tags</label>
                            <input type="text" name="tags" value="<%= h.tags.join(', ') %>" class="form-control">
                          </div>
                          <div class="col-md-6">
                            <label class="form-label">Status</label>
                            <select name="status" class="form-select">
                              <option value="upcoming" <%= h.status === "upcoming" ? "selected" : "" %>>Upcoming</option>
                              <option value="ongoing" <%= h.status === "ongoing" ? "selected" : "" %>>Ongoing</option>
                              <option value="completed" <%= h.status === "completed" ? "selected" : "" %>>Completed</option>
                              <option value="cancelled" <%= h.status === "cancelled" ? "selected" : "" %>>Cancelled</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update Hackathon</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Participants Tab -->
      <div class="tab-pane fade" id="participants">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h5>Registered Participants</h5>
        </div>

        <div class="table-responsive">
          <table class="table table-custom table-hover">
            <thead>
              <tr>
                <th>Team Name</th>
                <th>Hackathon</th>
                <th>Team Members</th>
                <th>Registration Date</th>
              </tr>
            </thead>
            <tbody>
              <% registrations.forEach(reg => { %>
                <tr>
                  <td><strong><%= reg.teamName %></strong></td>
                  <td><%= reg.hackathon ? reg.hackathon.name : 'N/A' %></td>
                  <td>
                    <% reg.teamMembers.forEach(member => { %>
                      <div>
                        <%= member.name %> 
                        (<%= member.yearOfDegree %> - <%= member.collegeName %>)
                      </div>
                    <% }) %>
                  </td>
                  <td><%= new Date(reg.registrationDate).toLocaleDateString() %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>


    </div>
  </div>

  <!-- Add Hackathon Modal -->
  <div class="modal fade" id="addHackathonModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <form action="/admin" method="POST">
          <div class="modal-header">
            <h5 class="modal-title">Add New Hackathon</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Name</label>
                <input type="text" name="name" class="form-control" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">Organizer</label>
                <input type="text" name="organizer" class="form-control" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" class="form-control" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" class="form-control" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Registration Deadline</label>
                <input type="date" name="registrationDeadline" class="form-control" required>
              </div>
              <div class="col-md-12">
                <label class="form-label">Location</label>
                <input type="text" name="location" class="form-control">
              </div>
              <div class="col-12">
                <label class="form-label">Image URL</label>
                <input type="text" name="image" class="form-control" placeholder="default-hackathon.jpg">
              </div>
              <div class="col-12">
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control" rows="3" required></textarea>
              </div>
              <div class="col-md-6">
                <label class="form-label">Tags</label>
                <input type="text" name="tags" class="form-control" placeholder="AI, Web, Cloud">
              </div>
              <div class="col-md-6">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                  <option value="upcoming">Upcoming</option>
                  <option value="ongoing">Ongoing</option>
                  <option value="completed">Completed</option>
                  <option value="cancelled">Cancelled</option>
                </select>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Create Hackathon</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Delete confirmation
      const deleteButtons = document.querySelectorAll('.delete-btn');
      deleteButtons.forEach(button => {
        button.addEventListener('click', function () {
          if (confirm('Are you sure you want to delete this hackathon?')) {
            this.closest('tr').remove();
          }
        });
      });

      // Tab persistence
      const adminTabs = document.querySelectorAll('#adminTabs .nav-link');
      adminTabs.forEach(tab => {
        tab.addEventListener('click', function () {
          localStorage.setItem('activeAdminTab', this.getAttribute('href'));
        });
      });

      // Restore active tab
      const activeTab = localStorage.getItem('activeAdminTab');
      if (activeTab) {
        const tabElement = document.querySelector(`#adminTabs a[href="${activeTab}"]`);
        if (tabElement) {
          new bootstrap.Tab(tabElement).show();
        }
      }
    });
  </script>
</body>
</html>
