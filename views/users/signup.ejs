<% layout("/layouts/boilerplates") %>

<!-- Register Hero -->
<section class="py-2 bg-custom-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h1 class="display-4 fw-bold mb-4">Join Our Community</h1>
        <p class="lead mb-4">
          Create your account to start sharing hackathon experiences.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Register Form -->
<section class="py-2">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card card-custom">
          <div class="card-body p-5">
            <h2 class="fw-bold mb-4 text-center">Create Your Account</h2>

            <form
              method="POST"
              action="/signup"
              class="needs-validation"
              novalidate
            >
              <div class="mb-4">
                <label for="username" class="form-label">Username</label>
                <input
                  type="text"
                  class="form-control form-control-custom"
                  id="username"
                  name="username"
                  minlength="3"
                  maxlength="30"
                  placeholder="Enter username"
                  required
                />
              </div>

              <div class="mb-4">
                <label for="email" class="form-label">Email Address</label>
                <input
                  type="email"
                  class="form-control form-control-custom"
                  id="email"
                  name="email"
                  placeholder="Enter email"
                  required
                />
              </div>

              <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control form-control-custom"
                  id="password"
                  name="password"
                  minlength="8"
                  placeholder="Enter password"
                  required
                />
                <small class="text-muted">
                  Minimum 8 characters with at least one number
                </small>
              </div>

              <div class="mb-4">
                <label for="role" class="form-label">Role</label>
                <select
                  class="form-select form-control-custom"
                  id="role"
                  name="role"
                  required
                >
                  <option value="user" selected>User</option>
                  <option value="admin">Admin</option>
                </select>
              </div>

              <div class="mb-4 form-check">
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="termsCheck"
                  required
                />
                <label class="form-check-label" for="termsCheck">
                  I agree to the
                  <a href="#" class="text-decoration-none">Terms of Service</a>
                  and
                  <a href="#" class="text-decoration-none">Privacy Policy</a>
                </label>
              </div>

              <div class="d-grid mb-4">
                <button type="submit" class="btn btn-custom-primary">
                  Create Account
                </button>
              </div>

              <div class="text-center">
                <p class="mb-0">
                  Already have an account?
                  <a href="/login" class="text-decoration-none">Login</a>
                </p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
